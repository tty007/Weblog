<div class="centering">
  <%# <h2>編集する <%= resource_name.to_s.humanize %>
  <h2>ユーザー情報を編集する</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name, 'ユーザーネーム' %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :email, 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, 'パスワード' %> <i>（変更しない場合は空白のままでお願いします）</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'パスワード確認' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, '現在のパスワード' %> <i>（変更を保存するために必要です）</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "情報を更新する" %>
    </div>
  <% end %>

  <h3>アカウントを削除する</h3>

  <p>不満足でしたか？ <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に退会しますか？" }, method: :delete %></p>

  <%= link_to "戻る", :back %>
</div>
